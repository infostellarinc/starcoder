<?xml version="1.0"?>
<block>
  <name>Waterfall Plotter</name>
  <key>starcoder_waterfall_plotter</key>
  <category>[starcoder]</category>
  <import>import starcoder</import>
  <make>starcoder.waterfall_plotter($fft_size, $filename)</make>

  <param>
    <name>FFT Size</name>
    <key>fft_size</key>
    <value>1024</value>
    <type>int</type>
  </param>

  <param>
    <name>Filename</name>
    <key>filename</key>
    <value>""</value>
    <type>string</type>
  </param>

  <!-- Make one 'sink' node per input. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <sink>
    <name>in</name>
    <type>byte</type>
  </sink>

</block>
