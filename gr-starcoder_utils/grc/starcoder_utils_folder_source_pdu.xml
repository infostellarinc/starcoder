<?xml version="1.0"?>
<block>
  <name>folder_source_pdu</name>
  <key>starcoder_utils_folder_source_pdu</key>
  <category>[starcoder_utils]</category>
  <import>import starcoder_utils</import>
  <make>starcoder_utils.folder_source_pdu($folder_name, $packet_length_bytes, $delay_between_packets_ms)</make>

  <param>
    <name>Folder name</name>
    <key>folder_name</key>
    <type>string</type>
  </param>

  <param>
    <name>Packet length in bytes</name>
    <key>packet_length_bytes</key>
    <value>259</value>
    <type>int</type>
  </param>

  <param>
    <name>Delay between packets in ms</name>
    <key>delay_between_packets_ms</key>
    <value>0</value>
    <type>int</type>
  </param>

  <source>
    <name>out</name>
    <type>message</type>
  </source>
</block>
