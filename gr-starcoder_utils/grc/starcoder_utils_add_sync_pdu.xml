<?xml version="1.0"?>
<block>
  <name>add_sync_pdu</name>
  <key>starcoder_utils_add_sync_pdu</key>
  <category>[starcoder_utils]</category>
  <import>import starcoder_utils</import>
  <make>starcoder_utils.add_sync_pdu($sync_word, $byte_length)</make>

  <param>
    <name>Synchronization word</name>
    <key>sync_word</key>
    <type>int</type>
  </param>

  <param>
    <name>Length in bytes</name>
    <key>byte_length</key>
    <type>int</type>
  </param>

  <sink>
    <name>in</name>
    <type>message</type>
  </sink>

  <source>
    <name>out</name>
    <type>message</type>
  </source>

</block>
